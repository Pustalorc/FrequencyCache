<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net461;net48;net5.0;net6.0;netstandard2.0;netstandard2.1</TargetFrameworks>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <RootNamespace>Pustalorc.Libraries.FrequencyCache</RootNamespace>
        <PackageId>Pustalorc.FrequencyCache</PackageId>
        <Product>Pustalorc.FrequencyCache</Product>
        <Title>Frequency Accessing Cache</Title>
        <Authors>Pustalorc</Authors>
        <Description>A cache SDK that utilizes access frequency &amp; creation date to determine which previous items to replace within the cache.</Description>
        <NeutralLanguage>en</NeutralLanguage>
        <AssemblyName>Pustalorc.FrequencyCache</AssemblyName>
        <RepositoryType>Github</RepositoryType>
        <PackageProjectUrl>https://github.com/Pustalorc/FrequencyCache</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Pustalorc/FrequencyCache</RepositoryUrl>
        <PackageTags>cache frequency replacement access</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Copyright>Copyright Â© 2020-2022 Pustalorc</Copyright>
        <PackageReleaseNotes>Switched to properties rather than fields on the cache.
            Added new ReloadConfiguration method.
            Made Dispose virtual.
            Updated some of the Xml Documentation.
            Removed ModifyCacheRefreshInterval.
            Removed default/example configuration.
        </PackageReleaseNotes>
        <LangVersion>10</LangVersion>
        <Nullable>enable</Nullable>
        <Version>1.2.1</Version>
        <PackageVersion>2.0.0</PackageVersion>
        <AssemblyVersion>2.0.0</AssemblyVersion>
        <FileVersion>2.0.0</FileVersion>
        <InformationalVersion>1.2</InformationalVersion>
    </PropertyGroup>

    <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
        <DocumentationFile>bin\Release\FrequencyCache.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="JetBrains.Annotations" Version="2021.3.0"/>
        <PackageReference Include="Microsoft.NETCore.Platforms" Version="6.0.1"/>
    </ItemGroup>

</Project>
